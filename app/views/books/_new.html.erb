    <h2 class="mt-3">New book</h2>
    <%= form_with  model: @book, local: true do |f| %>
    <label>Title</label>
    <%= f.text_field :title, class: "form-control book_title", name: "book[title]" %>
    <label>Opinion</label>
    <%= f.text_area :body, class: "form-control book_body", name: "book[body]" %></br>
    <%= f.submit "Create Book", class: "btn btn-success" %>
    <% end %>

