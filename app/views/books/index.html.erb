<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th>title</th>
      <th>opinion</th>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
  <tr>
    <th>
     <%= link_to book_path(book.id) do %><%= book.title %><% end %>
    </th>

    <th><%= book.body %></th>
  </tr>
  <% end %>
  </tbody>
</table>

  <%= render "books/new", book: @book %>