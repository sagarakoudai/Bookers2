  <div class="error_explanation">
   <h4><%= @book.errors.count %> errors prohibited this obj from being saved:</h4>
  　<ul><% @book.errors.full_messages.each do |message| %></ul>
  　<li><%= message %></li>
 　 <% end %>
  </div>
 <% end %>
 
<div class="col-md-3">
 <%= render "users/user_info", user: @user %>
 <%= render "books/new", book: @book %>
</div>

<div class ="col-md-8 offset-md-1">

<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th>title</th>
      <th>opinion</th>
    </tr>
  </thead>

  <tbody>
  <% @books. each do |book| %>
  <tr>
    <td>
      <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
    </td>

    <td>
     <%= link_to book_path(book.id) do %>
     <%= book.title %>
     <% end %>
    </td>

    <td><%= book.body %></td>
  </tr>
  <% end %>
  </tbody>
</table>

</div>

