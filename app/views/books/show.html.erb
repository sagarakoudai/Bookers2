<div class="row">


 <div class="col-md-3">
  <%= render "users/user_info", user: @user %>
  <%= render "books/new", book: @book %>
 </div>

 <div class ="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">
   <tbody>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %><br><%= link_to @user.name, user_path(@user.id)%></td>
      <td><%= @book2.title %></td>
      <td><%= @book2.body %></td>
      <% if @user.id == current_user.id %>
       <td><%= link_to "Edit", edit_book_path, class: "btn btn-sm btn-success edit_book_21459" %></td>
       <td><%= link_to "Destroy", book_path(@book2), class: "btn btn-sm btn-danger destroy_book_21459", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
      <% end %>
    </tr>
   </tbody>
  </table>
  </div>
  
</div>

