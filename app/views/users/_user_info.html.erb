<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: "jpg", fallback: "no_image.jpg" %>

<table>
    <tr>
      <th>Name</th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th>Introduction</th>
      <td><%= user.introduction %></td>
    </tr>
</table>

<% if user.id == current_user.id %>
 <%= link_to "edit", edit_user_path(user) %>
<% end %>

