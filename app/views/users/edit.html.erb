<div class="row">

<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User info</h2>

 <% if @user.errors.any? %>
  <div class="error_explanation">
   <h4><%= @user.errors.count %> errors prohibited this obj from being saved:</h4>
  　<ul><% @user.errors.full_messages.each do |message| %></ul>
  　<li><%= message %></li>
 　 <% end %>
  </div>
 <% end %>


<%= form_with model:@user, local:true do |f| %>

 <div class="form-group">
 <label for="inputName">Name</label>
 <%= f.text_field :name, autofocus: true, id:"inputName", placeholder: @user.name, class: "form-control name" %>
 </div>
 
 <div class="form-group">
 <label for="inputImage">Image</label><br>
 <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
 </div>
 
 <div class="form-group">
 <label for="inputIntroduction">Introduction</label>
 <%= f.text_area :introduction, autofocus:true, id:"inputIntroduction", placeholder: @user.introduction, class: "form-control introduction" %>
 </div>
 
 <div class="form-group">
 <%= f.submit "Update User", class: "btn btn-secondary" %>
 </div>
<% end %>

</div>

</div>