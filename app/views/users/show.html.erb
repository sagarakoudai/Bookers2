<%= render "users/user_info", user: @user %>
<%= render "books/new", book: @book %>

<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th>title</th>
      <th>opinion</th>
    </tr>
  </thead>

  <tbody>
  <% @books. each do |book| %>
  <tr>
    <td>
      <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
    </td>

    <td>
     <%= link_to book_path(book.id) do %>
     <%= book.title %>
     <% end %>
    </td>

    <td><%= book.body %></td>
  </tr>
  <% end %>
  </tbody>